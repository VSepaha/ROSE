<!DOCTYPE html>
<html>
  <head>
    <link rel = "stylesheet" href = "styles.css">
  </head>
  <body>
     <h1 id="status" style="text-align:center;">OFF</h1>
     <div style="text-align:center">
       <button type="button" onclick="go();test()">Go</button>
       <br>
       <button type="button" onclick="stop()">Stop</button>
     </div>
     
     <p id="test">this is a test</p>
     <script>
       function go()
       {
       	 document.getElementById("status").innerHTML = "GO";
       	 document.getElementById("status").style.color = "green";
       	 
       }
       function stop()
       {
       	 document.getElementById("status").innerHTML = "STOP";
       	 document.getElementById("status").style.color = "red";
       	 
       }
       function test()
       {
       	 document.getElementById("test").innerHTML = "It Worked!";
       }
     </script>
  </body>
</html>

